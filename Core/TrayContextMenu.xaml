<Window x:Class="ActivityScheduler.Core.TrayContextMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityScheduler.Core"
        mc:Ignorable="d"
        Title="TrayContextMenu" Height="450" Width="800">
    <Window.Resources>

        <ContextMenu x:Key="NotifierContextMenu"

                    Placement="MousePoint">

            <MenuItem Header="Open" Click="Menu_Open"/>
            
            <MenuItem Header="Exit" Click="Menu_Close"/>

        </ContextMenu>

    </Window.Resources>
</Window>
